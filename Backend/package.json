{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "build": "tsc",
    "deploy": "eb deploy",
    "server": "ts-node ./src/server.ts",
    "postinstall": "npm run db:migrate || true && npm run db:seed || true",
    "start": "node dist/server.js",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "test": "ENV=test && npx db-migrate --env test up && npx jasmine-ts && npx db-migrate db:drop test",
    "db:migrate": "node_modules/.bin/db-migrate up",
    "db:migrate:down": "node_modules/.bin/db-migrate down",
    "db:reset": "node_modules/.bin/db-migrate reset",
    "db:seed": "node scripts/seed.js",
    "db:seed:docker": "docker compose exec -T postgres psql -U postgres -d store < migrations/sqls/seed_store.sql",
    "db:setup": "npm run db:migrate && npm run db:seed"
  },
  "author": "Udacity",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "dotenv": "^17.2.3",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^4.17.9",
    "@types/jasmine": "^3.6.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^7.14.7",
    "@types/supertest": "^6.0.3",
    "gitignore": "^0.7.0",
    "jasmine": "^3.6.4",
    "jasmine-spec-reporter": "^6.0.0",
    "jasmine-ts": "^0.3.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsc-watch": "^4.2.9"
  }
}
